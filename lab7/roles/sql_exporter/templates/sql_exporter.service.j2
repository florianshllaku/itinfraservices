[Unit]
Description=SQL Exporter
Wants=network.target
After=network.target

[Service]
User=sql_exporter
Group=sql_exporter
Environment="DATA_SOURCE_NAME=prometheus:{{ prometheus_db_password }}@tcp(127.0.0.1:3306)/wordpress"
Type=simple
ExecStart=/opt/sql_exporter/mysqld_exporter

[Install]
WantedBy=multi-user.target